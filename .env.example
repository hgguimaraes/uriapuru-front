# Uirapuru Frontend Environment Configuration

# ============================================================================
# API Configuration
# ============================================================================

# Base URL for the Uirapuru API
# Development: http://localhost:3001
# Production: https://api.uirapuru.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# Tenant ID for multi-tenant support
# This identifies which tenant this frontend instance serves
NEXT_PUBLIC_TENANT_ID=default-tenant

# ============================================================================
# Environment Configuration
# ============================================================================

# Application environment
# Options: development, production, test
NODE_ENV=development

# ============================================================================
# Feature Flags (Optional)
# ============================================================================

# Enable debug mode for development
# Shows additional logging and debug information
NEXT_PUBLIC_ENABLE_DEBUG=true

# Enable analytics tracking
# Set to false to disable analytics in development
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable experimental features
# Use with caution in production
NEXT_PUBLIC_ENABLE_EXPERIMENTAL=false

# ============================================================================
# Authentication Configuration (Optional)
# ============================================================================

# JWT token expiration time (in seconds)
# Default: 86400 (24 hours)
NEXT_PUBLIC_JWT_EXPIRE_TIME=86400

# Cookie domain for authentication
# Leave empty for automatic detection
NEXT_PUBLIC_COOKIE_DOMAIN=

# ============================================================================
# UI Configuration (Optional)
# ============================================================================

# Default theme
# Options: light, dark, auto
NEXT_PUBLIC_DEFAULT_THEME=light

# Default language/locale
# Options: pt-BR, en-US, es-ES
NEXT_PUBLIC_DEFAULT_LOCALE=pt-BR

# ============================================================================
# Monitoring & Observability (Optional)
# ============================================================================

# Sentry DSN for error tracking
# Only set in production
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics tracking ID
# Only set if analytics are enabled
NEXT_PUBLIC_GA_TRACKING_ID=

# ============================================================================
# Performance Configuration (Optional)
# ============================================================================

# Enable service worker for caching
NEXT_PUBLIC_ENABLE_SW=false

# API request timeout (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================================================
# Development Only
# ============================================================================

# Mock API responses (development only)
# Set to true to use mock data instead of real API
NEXT_PUBLIC_USE_MOCK_API=false

# Show performance metrics in development
NEXT_PUBLIC_SHOW_PERF_METRICS=false

# Enable React DevTools in production (not recommended)
NEXT_PUBLIC_ENABLE_REACT_DEVTOOLS=false